{
  "openapi": "3.0.1",
  "info": {
    "title": "ToDoUser API",
    "description": "TodoアプリバックエンドのUserと認証に関するAPI",
    "version": "v0.0.2"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/auth/v1/sign_up": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "ユーザー作成",
        "operationId": "signUpJson",
        "requestBody": {
          "description": "作成するユーザーオブジェクト",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignUpDto"
              },
              "examples": {
                "期待されるリクエストボディ": {
                  "description": "期待されるリクエストボディ",
                  "value": {
                    "username": "testuser1234",
                    "password": "veeeeeeeeeeeeeryStrongPassword"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserDetail"
                },
                "examples": {
                  "ユーザー作成成功": {
                    "description": "ユーザー作成成功",
                    "value": {
                      "username": "f",
                      "userId": "4f130f04-becf-4470-98bf-6c1c565f1ab4",
                      "createdAt": "2025-07-23T17:06:27.690405800Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                },
                "examples": {
                  "ユーザー名がすでに使用されている": {
                    "description": "ユーザー名がすでに使用されている",
                    "value": {
                      "type": "about:blank",
                      "title": "Bad Request",
                      "status": 400,
                      "detail": "ユーザーの作成に失敗しました：[ユーザー名fはすでに使用されています]",
                      "instance": "/auth/v1/sign_up"
                    }
                  },
                  "入力内容にエラーがある": {
                    "description": "入力内容にエラーがある",
                    "value": {
                      "type": "about:blank",
                      "title": "Validation Failed",
                      "status": 400,
                      "detail": "入力内容にエラーがあります",
                      "instance": "/auth/v1/sign_up",
                      "errors": [
                        {
                          "field": "username",
                          "message": "ユーザー名に半角英数字以外が使用されています",
                          "rejectedValue": "あ"
                        }
                      ]
                    }
                  },
                  "入力内容に複数エラーがある": {
                    "description": "入力内容に複数エラーがある",
                    "value": {
                      "type": "about:blank",
                      "title": "Validation Failed",
                      "status": 400,
                      "detail": "入力内容にエラーがあります",
                      "instance": "/auth/v1/sign_up",
                      "errors": [
                        {
                          "field": "password",
                          "message": "パスワードは必須です",
                          "rejectedValue": ""
                        },
                        {
                          "field": "username",
                          "message": "ユーザー名に半角英数字以外が使用されています",
                          "rejectedValue": "あ"
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/v1/sign_in": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "ログイン",
        "operationId": "signInJson",
        "requestBody": {
          "description": "ログインするユーザーオブジェクト",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignInDto"
              },
              "examples": {
                "期待されるリクエストボディ": {
                  "description": "期待されるリクエストボディ",
                  "value": {
                    "username": "testuser1234",
                    "password": "veeeeeeeeeeeeeryStrongPassword"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Token"

          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                },
                "examples": {
                  "入力内容にエラーがある": {
                    "description": "入力内容にエラーがある",
                    "value": {
                      "type": "about:blank",
                      "title": "Validation Failed",
                      "status": 400,
                      "detail": "入力内容にエラーがあります",
                      "instance": "/auth/v1/sign_up",
                      "errors": [
                        {
                          "field": "username",
                          "message": "ユーザー名に半角英数字以外が使用されています",
                          "rejectedValue": "あ"
                        }
                      ]
                    }
                  },
                  "入力内容に複数エラーがある": {
                    "description": "入力内容に複数エラーがある",
                    "value": {
                      "type": "about:blank",
                      "title": "Validation Failed",
                      "status": 400,
                      "detail": "入力内容にエラーがあります",
                      "instance": "/auth/v1/sign_up",
                      "errors": [
                        {
                          "field": "password",
                          "message": "パスワードは必須です",
                          "rejectedValue": ""
                        },
                        {
                          "field": "username",
                          "message": "ユーザー名に半角英数字以外が使用されています",
                          "rejectedValue": "あ"
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                },
                "examples": {
                  "ユーザー名かパスワードが正しくない": {
                    "description": "ユーザー名かパスワードが正しくない",
                    "value": {
                      "type": "about:blank",
                      "title": "Unauthorized",
                      "status": 401,
                      "detail": "ユーザ名かパスワードが正しくありません",
                      "instance": "/auth/v1/sign_in"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/users/i": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "現在ログインしているユーザーの取得",
        "operationId": "getI",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserDetail"
                },
                "examples": {
                  "ログイン中のユーザー取得成功": {
                    "description": "ログイン中のユーザー取得成功",
                    "value": {
                      "username": "ab",
                      "userId": "77b714bc-f064-42ad-b01c-ad4a1d4bd87e",
                      "createdAt": "2025-07-24T15:06:06.647007100Z"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "description": "401となった原因",
                "style": "simple",
                "schema": {
                  "type": "string"
                },
                "examples": {
                  "トークンがJWTの形式じゃない": {
                    "description": "トークンがJWTの形式じゃない",
                    "value": "Bearer realm\u003d\"api\", error\u003d\"invalid_token\", error_description\u003d\"An error occurred while attempting to decode the Jwt: Malformed token\""
                  }
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetail"
                },
                "examples": {
                  "ログイン情報が間違っている": {
                    "description": "ログイン情報が間違っている",
                    "value": {
                      "type": "about:blank",
                      "title": "Authentication Failed",
                      "status": 401,
                      "detail": "Full authentication is required to access this resource",
                      "instance": "/api/v1/users/i"
                    }
                  },
                  "ログイントークンが不正": {
                    "description": "ログイントークンが不正",
                    "value": {
                      "type": "about:blank",
                      "title": "invalid_token",
                      "status": 401,
                      "detail": "An error occurred while attempting to decode the Jwt: Malformed token",
                      "instance": "/api/v1/users/i"
                    }
                  },
                  "トークンの署名が不正": {
                    "description": "トークンが古いなどの可能性がある",
                    "value": {
                      "type": "about:blank",
                      "title": "invalid_token",
                      "status": 401,
                      "detail": "An error occurred while attempting to decode the Jwt: Signed JWT rejected: Invalid signature",
                      "instance": "/api/v1/users/i"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "jwt": []
          }
        ]
      }
    },
    "/.well-known/jwks.json": {
      "get": {
        "tags": [
          "jwks-controller"
        ],
        "summary": "JWKsエンドポイント",
        "description": "RFC7517",
        "operationId": "jwks",
        "responses": {
          "200": {
            "description": "Json Web Key Setを返します",
            "content": {
              "application/json": {
                "example": {
                  "keys": [
                    {
                      "kty": "RSA",
                      "e": "AQAB",
                      "kid": "nEpO3EdePSSOWX-2zjpizXBWtmcY2yB4-XbVGJJK8Oo",
                      "n": "9DfhZ92pIYxtxfWKpRuWAB1ybQbhfHhFgXtHsxVkmWMCyL5sa5RXsEXxiwmGQsCVN5pHAP2t0-GgeURgDOR1ugVdQwbQGX0qrFPSDtTe3BcdOFIGnbUtikDcVUj_PcgW3QWISNzZzSy_c6JayEIswhvNUReTiz3r5UFpKQ2N2CCCcflknFSU-_qX9MvSbge0zjjnqNd41KIBafdvlWD0LZS9LHbPA5rp1BfhX01NGPGs5NP8DczzEwYc-011SIULcMA7sU2B4DoxqGHDyprddhWM0PkeuSg3l1RUbtx1NEgS2WmJDt9snrrL6PQfftLo9hsHNhEMQbvLDUwYnX7Tow"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserDetail": {
        "required": [
          "createdAt",
          "userId",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "description": "ユーザーの詳細な情報\nログインしているユーザー自身の情報"
      },
      "ProblemDetail": {
        "required": [
          "type",
          "title",
          "status",
          "detail",
          "instance"
        ],
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "integer"
          },
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string"
          },
          "errors": {
            "type": "array",
            "items": {
              "required": [
                "field"
              ],
              "type": "object",
              "properties": {
                "field": {
                  "type": "string"
                },
                "message": {
                  "type": "string",
                  "nullable": true
                },
                "rejectedValue": {
                  "type": "string",
                  "nullable": true
                }
              }
            }
          }
        }
      },
      "SignUpDto": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 255,
            "minLength": 0,
            "pattern": "[a-zA-Z0-9]+",
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        }
      },
      "Token": {
        "required": [
          "token"
        ],
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "SignInDto": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 255,
            "minLength": 0,
            "pattern": "[a-zA-Z0-9]+",
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        }
      },
      "ValidationErrorDetail": {
        "required": [
          "field"
        ],
        "type": "object",
        "properties": {
          "field": {
            "type": "string"
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "rejectedValue": {
            "type": "string",
            "nullable": true
          }
        }
      }
    },
    "securitySchemes": {
      "jwt": {
        "type": "http",
        "description": "JWTを利用したトークン",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}